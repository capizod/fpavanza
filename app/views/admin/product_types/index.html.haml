= styles_for :product_type

.title_tools
  - if current_user.isSuper
    = link_to_inline(:create_product_type, new_admin_product_type_path, :text => t(:create_product_type))

.title
  %span#create_product_type_title #{t :product_types}
  = image_tag("loading.gif", :size => :thumb, :id => "loading", :style => "display: none;")

.remote#create_product_type{ hidden }

.list#product_types
  - if @product_types.any?
    = render :partial => "product_type", :collection => @product_types
  - else
    = render "shared/empty"

#paginate= render "shared/paginate"

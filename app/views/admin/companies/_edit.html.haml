.remote
  = form_for([:admin, @company], :html => one_submit_only(:company).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_company_path(@company)

    = f.error_messages :object_name => t('company')

    = render "admin/companies/form", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_company)
      #{t :or}
      = link_to_cancel edit_admin_company_path(@company)

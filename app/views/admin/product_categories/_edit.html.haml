.remote
  = form_for([:admin, @product_category], :html => one_submit_only(:product_category).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_product_category_path(@product_category)

    = f.error_messages :object_name => t('product_category')

    = render "admin/product_categories/form", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_product_category)
      #{t :or}
      = link_to_cancel edit_admin_product_category_path(@product_category)

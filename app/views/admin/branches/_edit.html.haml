.remote
  = form_for([:admin, @branch], :html => one_submit_only(:branch).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_branch_path(@branch)
    = f.hidden_field :bank_id

    = f.error_messages :object_name => t('branch')

    = render "admin/branches/form", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_branch)
      #{t :or}
      = link_to_cancel edit_admin_branch_path(@branch)
